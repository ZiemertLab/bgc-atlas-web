doctype html
html(lang="en")
    block head
        meta(charset="UTF-8")
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description' content="Biosynthetic Gene Cluster and Secondary Metabolite Atlas")
        meta(name='keywords', content='biosynthetic gene cluster, BGC Atlas, biosynthetic gene cluster atlas, secondary metabolite, BGC database, metagenomics, natural products, Nadine Ziemert, Caner Bagci, University of Tübingen')
        meta(name='robots', content='index, follow')
        meta(property='og:type', content='Website')
        meta(property='og:title', content='BGC Atlas')
        meta(property='og:url', content='https://bgc-atlas.cs.uni-tuebingen.de')
        title BGC Atlas
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css")
        link(rel="stylesheet", href="/stylesheets/style.css")
        script(src="https://code.jquery.com/jquery-3.6.0.min.js")
        script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js")
        link(rel="icon", href="/images/BGC-Atlas-logo.png", type="image/png")
    body(style="height: 100%; margin: 0;")
        main.w-100.d-flex.flex-column(style="height: 100%;")
            div.text-center.d-flex.flex-column.flex-grow-1(style="height: 100%;")
                nav.navbar.navbar-expand-sm.navbar-dark.bg-dark(style="width:100%;")
                    .container-fluid
                        a.navbar-brand(href='/') BGC Atlas
                        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#mynavbar')
                            span.navbar-toggler-icon
                        #mynavbar.collapse.navbar-collapse
                            ul.navbar-nav.me-auto
                                li.nav-item
                                    a.nav-link(href='/') Home
                                li.nav-item
                                    a.nav-link(href='/samples') Samples
                                li.nav-item
                                    a.nav-link(href='/bgcs') BGCs
                                li.nav-item
                                    a.nav-link(href='/gcfs') GCFs
                                li.nav-item
                                    a.nav-link(href="/search") Search
                                li.nav-item
                                    a.nav-link(href="/downloads") Downloads
                                li.nav-item
                                    a.nav-link(href="") About
                            form.d-flex
                                input.form-control.me-2(type='text' placeholder='Search')
                                button.btn.btn-primary(type='button') Search
                block content
                footer.text-center.bg-dark.text-white
                    p University of Tübingen - 2024 - <a href="/imprint">Imprint</a> - <a href="/privacy">Privacy Policy</a>

        block scripts

        block styles
            link(rel="stylesheet", href="/stylesheets/style.css")