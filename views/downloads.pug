extends layout

block content
    div.row.flex-fill.d-flex.justify-content-start(style=height="inherit;")
        div.col-sm-12.text-center.bg-white.text-dark
            h2 Downloads
            ul.list-group
                li.list-group-item
                    a(href="/downloads/complete-bgcs.tar.gz" download) complete-bgcs.tar.gz
                    p A tarball containing the GBK files for only the complete BGC (3.5GB).
                li.list-group-item
                    a(href="/downloads/all-bgcs.tar.gz" download) all-bgcs.tar.gz
                    p A tarball containing the GBK files for all BGCs (13GB).
                li.list-group-item
                    a(href="/downloads/bigslice_2.0.0_T0.4_16April.tar.gz" download) bigslice_2.0.0_T0.4_16April.tar.gz
                    p A tarball containing the BiG-SliCE clustering of complete BGCs (2.0 GB).

